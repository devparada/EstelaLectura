---
interface Props {
  title: string;
  body: string;
  href: string;
  src: string;
}

const { href, title, body, src } = Astro.props;
import { Image } from "astro:assets";
---

<li class="link-card">
  <a href={href}>
    <Image
      src={src}
      alt=`Logo ${title}`
      width="100"
      height="100"
      loading="eager"
      class="m-auto"
    />
    <h2 class="mt-2 text-center">{title}</h2>
    <p class="mt-2 text-center">{body}</p>
  </a>
</li>
<style>
  h2 {
    font-size: 17px;
    font-weight: bold;
  }
  .link-card {
    display: flex;
    padding: 1px;
    border-radius: 10px;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  }
  .link-card > a {
    width: 100%;
    line-height: 1.4;
    padding: calc(0.5rem - 1px);
    border-radius: 8px;
    opacity: 0.9;
  }
  .link-card:is(:hover, :focus-within) h2 {
    color: var(--accent-light);
  }
  @media (min-width: 640px) {
    .link-card > a {
      padding: calc(1.5rem - 1px);
    }


  }
</style>
