---
interface Props {
  title: string;
  autor: string;
  body: string;
  href: string;
  src: string;
}

const { href, title, autor, body, src } = Astro.props;
import { Image } from "astro:assets";
---

<li class="link-card">
  <div>
    <a href={href}>
      <Image
        src={src}
        alt=`Logo ${title}`
        width="80"
        height="80"
        loading="eager"
        class="m-auto"
      />
      <h2 class="mt-2 text-center">{title}</h2>
      <p class="mt-1 text-center">{autor}</p>
      <p class="mt-2 text-center">{body}</p>
    </a>
    <div class="text-center" id="leido">
      <input type="checkbox" id=`leido${title.slice(0,12).replace(/ /g, "")}` />
      <label for=`leido${title.slice(0,12).replace(/ /g, "")}`>Leido</label>
    </div>
  </div>
</li>
<style>
  h2 {
    font-size: 17px;
    font-weight: bold;
  }
  .link-card {
    width: 100%;
    line-height: 1.4;
    border-radius: 12px;
    opacity: 0.9;
    display: flex;
    padding: 1px;
    border-radius: 10px;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  }
  .link-card div {
    margin-top: 2px;
    margin-left: 5px;
    margin-right: 5px;
    margin-bottom: 2px;
  }
  .link-card div a {
    padding: calc(0.5rem - 1px);
  }
  .link-card:is(:hover) h2 {
    color: var(--accent-light);
  }
  #leido {
    margin-top: -10px;
  }
</style>
