---
interface Props {
	title: string;
	body: string;
	href: string;
	src: string;
}

const { href, title, body, src } = Astro.props;
import { Image } from 'astro:assets';
---

<li class="link-card">
	<a href={href}>
		<Image src={src} alt=`Logo ${title}` width="100" height="100" loading="eager" class="m-auto" />
		<h2 class="text-xl mt-2 text-center">{title}</h2>
		<p class="mt-2 text-center">{body}</p>
	</a>
</li>
<style>
	.link-card {
		display: flex;
		padding: 1px;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.link-card > a {
		width: 100%;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.9;
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
</style>
