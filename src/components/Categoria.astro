---
interface Props {
  title: string;
  body: string;
  href: string;
  clase: string;
}

const { href, title, body, clase } = Astro.props;
---

<li class=`link-card ${clase}`>
  <a href={href}>
    <h2 class="text-xl mt-2 text-center">{title}</h2>
    <p class="mt-2 text-center">{body}</p>
  </a>
</li>
<style>
  .bg-minecraft {
    background-image: url(https://external-preview.redd.it/DOtHVe4vSBCNuvljQeSW163LNsOMFydpNdZoBwfW1mo.png?auto=webp&s=e20c094dba613415866db45c32faf4c51567975c);
    background-attachment: fixed;
  }
  .link-card {
    display: flex;
    align-items: center;
    padding: px;
    border-radius: 10px;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  }
  .link-card > a {
    width: 100%;
    line-height: 1.4;
    padding: calc(2.5rem - 1px);
    border-radius: 8px;
    opacity: 0.9;
  }
  .link-card:is(:hover, :focus-within) h2 {
    color: var(--accent-light);
  }
</style>
